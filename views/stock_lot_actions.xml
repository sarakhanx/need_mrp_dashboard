<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_stock_lot_form_dashboard" model="ir.actions.act_window">
        <field name="name">Lots/Serial Numbers (Filtered: Categ 7, Qty > 0)</field>
        <field name="res_model">stock.lot</field>
        <field name="view_mode">tree,form,kanban,search</field>
        <!-- Removed explicit search_view_id, let Odoo find the default -->
        <!-- <field name="search_view_id" ref="stock.view_production_lot_filter"/> -->
        <!-- Removed context, using domain instead for fixed filtering -->
        <!-- <field name="context">{'search_default_product_categ_id': 7, 'search_default_on_hand': 1}</field> -->
        <!-- Apply fixed domain to filter by Category 7 and Qty > 0 -->
        <field name="domain">[('product_id.categ_id', '=', 7), ('product_qty', '>', 0)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Lots or Serial Numbers found for Category ID 7 with quantity > 0.
            </p><p>
                This view shows Lot/Serial Numbers for a specific category with quantity > 0.
            </p>
        </field>
    </record>
</odoo> 